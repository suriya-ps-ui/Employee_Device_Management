@model List<Models.Employee>
@{
    ViewData["Title"] = "Manage Employees";
}

<!-- Bootstrap CSS CDN -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

<!-- Header -->
<header class="bg-dark text-white py-3">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="h4 mb-0">Assest Management Service</h1>
            <nav>
                    <a href="/Admin/Index" class="text-white text-decoration-none me-3">Home</a>
                <a href="/Account/Logout" class="text-white text-decoration-none">Logout</a>
            </nav>
        </div>
    </div>
</header>

<!-- Main Content -->
<main class="container my-5">
    <div class="row justify-content-center">
        <div class="col-12">
            <h2 class="text-center mb-4">Manage Employees</h2>
            <p class="text-center"><a href="/Admin/CreateEmployee" class="btn btn-primary">Add Employee</a></p>
            
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Department</th>
                            <th>Availability</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var employee in Model)
                        {
                            <tr>
                                <td>@employee.empId</td>
                                <td>@employee.empName</td>
                                <td>@employee.department</td>
                                <td>@employee.isAvilable</td>
                                <td>
                                    <a href="/Admin/EditEmployee?empId=@employee.empId" class="btn btn-sm btn-warning">Edit</a>
                                    <a href="/Admin/DeleteEmployee?empId=@employee.empId" class="btn btn-sm btn-danger">Delete</a>
                                    <a href="/Admin/ManageDevices?empId=@employee.empId" class="btn btn-sm btn-info">Devices</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            
            <p class="text-center"><a href="/Admin/Index" class="btn btn-secondary">Back</a></p>
        </div>
    </div>
</main>

<!-- Footer -->
<footer class="bg-dark text-white text-center py-3 fixed-bottom">
    <div class="container">
        <p class="mb-0">Assest Management Service</p>
    </div>
</footer>
@model Models.EmployeeRequest
@{
    ViewData["Title"] = "Edit Employee";
}

<!-- Bootstrap CSS CDN -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

<!-- Header -->
<header class="bg-dark text-white py-3">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="h4 mb-0">Assest Management Service</h1>
            <nav>
                    <a href="/Admin/Index" class="text-white text-decoration-none me-3">Home</a>
                <a href="/Account/Logout" class="text-white text-decoration-none">Logout</a>
            </nav>
        </div>
    </div>
</header>

<!-- Main Content -->
<main class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <h2 class="text-center mb-4">Edit Employee</h2>
            <form action="EditEmployee" method="post" class="bg-light p-4 rounded shadow">
                <input type="hidden" name="empId" value="@Model.empId"/>
                <input type="hidden" name="isAvilable" value="@Model.isAvilable"/>  
                <div class="mb-3">
                    <label name="empName" class="form-label">Name</label>
                    <input name="empName" class="form-control" value="@Model.empName" required />
                </div
                <div class="mb-3">
                    <label name="department" class="form-label">Department</label>
                    <input name="department" class="form-control"value="@Model.department" required />
                </div>
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary">Update</button>
                    <a href="/Admin/ManageEmployees" class="btn btn-secondary">Back</a>
                </div>
            </form>
        </div>
    </div>
</main>

<!-- Footer -->
<footer class="bg-dark text-white text-center py-3 fixed-bottom">
    <div class="container">
        <p class="mb-0">Assest Management Service</p>
    </div>
</footer>
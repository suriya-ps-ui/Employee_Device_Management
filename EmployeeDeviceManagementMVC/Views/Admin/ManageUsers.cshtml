@model List<Models.User>
@{
    ViewData["Title"] = "Manage Users";
}

<!-- Bootstrap CSS CDN -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

<!-- Header -->
<header class="bg-dark text-white py-3">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="h4 mb-0">Assest Management Service</h1>
            <nav>
                    <a href="/Admin/Index" class="text-white text-decoration-none me-3">Home</a>
                <a href="/Account/Logout" class="text-white text-decoration-none">Logout</a>
            </nav>
        </div>
    </div>
</header>

<!-- Main Content -->
<main class="container my-5">
    <div class="row justify-content-center">
        <div class="col-12">
            <h2 class="text-center mb-4">Manage Users</h2>
            <p class="text-center"><a href="/Admin/CreateUser" class="btn btn-primary">Add User</a></p>
            @if(ViewBag.Error!=null){
                <div class="alert alert-danger">@ViewBag.Error</div>
            }
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Username</th>
                            <th>Role</th>
                            <th>Employee ID</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.id</td>
                                <td>@user.userName</td>
                                <td>@user.role</td>
                                <td>@user.empId</td>
                                <td>
                                    <a href="/Admin/EditUser?empId=@user.empId" class="btn btn-sm btn-warning">Edit</a>
                                    <a href="/Admin/DeleteUser?empId=@user.empId" class="btn btn-sm btn-danger">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            
            <p class="text-center"><a href="/Admin/Index" class="btn btn-secondary">Back</a></p>
        </div>
    </div>
</main>

<!-- Footer -->
<footer class="bg-dark text-white text-center py-3 fixed-bottom">
    <div class="container">
        <p class="mb-0">Assest Management Service</p>
    </div>
</footer>
@model Models.Laptop
@{
    ViewData["Title"] = "Edit Laptop";
    var empId = ViewBag.EmpId;
}

<!-- Bootstrap CSS CDN -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

<!-- Header -->
<header class="bg-dark text-white py-3">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="h4 mb-0">Assest Management Service</h1>
            <nav>
                    <a href="/Admin/Index" class="text-white text-decoration-none me-3">Home</a>
                <a href="/Account/Logout" class="text-white text-decoration-none">Logout</a>
            </nav>
        </div>
    </div>
</header>

<!-- Main Content -->
<main class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <h2 class="text-center mb-4">Edit Laptop</h2>
            <form asp-action="EditDevice" method="post" class="bg-light p-4 rounded shadow">
                <input type="hidden" name="empId" value="@empId" />
                <input type="hidden" name="deviceType" value="Laptop" />
                <input type="hidden" name="id" value="@Model.lapHostName" />

                <div class="mb-3">
                    <label for="lapModel" class="form-label">Model</label>
                    <input type="text" name="lapModel" class="form-control" value="@Model.lapModel" required />
                </div>

                <div class="mb-3">
                    <label for="processor" class="form-label">Processor</label>
                    <input type="text" name="processor" class="form-control" value="@Model.processor" required />
                </div>

                <div class="mb-3">
                    <label for="storage" class="form-label">Storage</label>
                    <input type="text" name="storage" class="form-control" value="@Model.storage" required />
                </div>

                <div class="mb-3">
                    <label for="ram" class="form-label">RAM</label>
                    <input type="text" name="ram" class="form-control" value="@Model.ram" required />
                </div>

                <div class="mb-3">
                    <label for="assignedOn" class="form-label">Assigned On</label>
                    <input type="date" name="assignedOn" class="form-control" value="@Model.assignedOn.ToString("yyyy-MM-dd")" required />
                </div>

                <div class="mb-3">
                    <label for="status" class="form-label">Status</label>
                    <input type="text" name="status" class="form-control" value="@Model.status" required />
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary">Update</button>
                    <a href="/Admin/ManageDevices?empId=@empId" class="btn btn-secondary">Back</a>
                </div>
            </form>
        </div>
    </div>
</main>

<!-- Footer -->
<footer class="bg-dark text-white text-center py-3 fixed-bottom">
    <div class="container">
        <p class="mb-0">Assest Management Service</p>
    </div>
</footer>
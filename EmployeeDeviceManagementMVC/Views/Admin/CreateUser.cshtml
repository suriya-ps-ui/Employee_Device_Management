@model Models.RegisterRequest
@{
    ViewData["Title"] = "Create User";
}

<!-- Bootstrap CSS CDN -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

<!-- Header -->
<header class="bg-dark text-white py-3">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="h4 mb-0">Assest Management Service</h1>
            <nav>
                    <a href="/Admin/Index" class="text-white text-decoration-none me-3">Home</a>
                <a href="/Account/Logout" class="text-white text-decoration-none">Logout</a>
            </nav>
        </div>
    </div>
</header>

<!-- Main Content -->
<main class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <h2 class="text-center mb-4">Create User</h2>
            @if(ViewBag.Error!=null){
                <div class="alert alert-danger">@ViewBag.Error</div>
            }
            <form action="CreateUser" method="post" class="bg-light p-4 rounded shadow">
                <div class="mb-3">
                    <label name="username" class="form-label">Username</label>
                    <input name="username" class="form-control" placeholder="Enter username" required />
                </div>

                <div class="mb-3">
                    <label name="password" class="form-label">Password</label>
                    <input name="password" type="password" class="form-control" placeholder="Enter password" required />
                </div>

                <div class="mb-3">
                    <label name="role" class="form-label">Role</label>
                    <select name="role" class="form-select" required>
                        <option value="Admin">Admin</option>
                        <option value="Employee">Employee</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label name="empId" class="form-label">Employee ID</label>
                    <input name="empId" class="form-control" placeholder="Enter employee ID"/>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary">Create</button>
                    <a href="/Admin/ManageUsers" class="btn btn-secondary">Back</a>
                </div>
            </form>
        </div>
    </div>
</main>

<!-- Footer -->
<footer class="bg-dark text-white text-center py-3 fixed-bottom">
    <div class="container">
        <p class="mb-0">Assest Management Service</p>
    </div>
</footer>

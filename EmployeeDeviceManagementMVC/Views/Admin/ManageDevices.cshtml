@model Models.Employee
@{
    ViewData["Title"] = "Manage Devices";
}

<!-- Bootstrap CSS CDN -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

<!-- Header -->
<header class="bg-dark text-white py-3">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="h4 mb-0">Asset Management Service</h1>
            <nav>
                    <a href="/Admin/Index" class="text-white text-decoration-none me-3">Home</a>
                <a href="/Account/Logout" class="text-white text-decoration-none">Logout</a>
            </nav>
        </div>
    </div>
</header>

<!-- Main Content -->
<main class="container my-5">
    <div class="row justify-content-center">
        <div class="col-12">
            <h2 class="text-center mb-4">Manage Devices for @Model.empName</h2>
            <p class="text-center">
                <a href="/Admin/CreateDevice?empId=@Model.empId&deviceType=Laptop" class="btn btn-primary me-2">Add Laptop</a>
                <a href="/Admin/CreateDevice?empId=@Model.empId&deviceType=Keyboard" class="btn btn-primary me-2">Add Keyboard</a>
                <a href="/Admin/CreateDevice?empId=@Model.empId&deviceType=Mouse" class="btn btn-primary">Add Mouse</a>
            </p>
            @if (Model.laptops != null && Model.laptops.Any())
            {
                <h3>Laptops</h3>
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Host Name</th>
                                <th>Model</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var laptop in Model.laptops)
                            {
                                <tr>
                                    <td>@laptop.lapHostName</td>
                                    <td>@laptop.lapModel</td>
                                    <td>@laptop.status</td>
                                    <td>
                                        <a href="/Admin/EditDevice?empId=@Model.empId&deviceType=Laptop&id=@laptop.lapHostName" class="btn btn-sm btn-warning">Edit</a>
                                        <a href="/Admin/DeleteDevice?empId=@Model.empId&deviceType=Laptop&id=@laptop.lapHostName" class="btn btn-sm btn-danger">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }

            @if (Model.keyboards != null && Model.keyboards.Any())
            {
                <h3>Keyboards</h3>
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>ID</th>
                                <th>Brand</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var keyboard in Model.keyboards)
                            {
                                <tr>
                                    <td>@keyboard.keyId</td>
                                    <td>@keyboard.keyBrand</td>
                                    <td>@keyboard.status</td>
                                    <td>
                                        <a href="/Admin/EditDevice?empId=@Model.empId&deviceType=Keyboard&id=@keyboard.keyId" class="btn btn-sm btn-warning">Edit</a>
                                        <a href="/Admin/DeleteDevice?empId=@Model.empId&deviceType=Keyboard&id=@keyboard.keyId" class="btn btn-sm btn-danger">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }

            @if (Model.mouses != null && Model.mouses.Any())
            {
                <h3>Mice</h3>
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>ID</th>
                                <th>Brand</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var mouse in Model.mouses)
                            {
                                <tr>
                                    <td>@mouse.mouseId</td>
                                    <td>@mouse.mouseBrand</td>
                                    <td>@mouse.status</td>
                                    <td>
                                        <a href="/Admin/EditDevice?empId=@Model.empId&deviceType=Mouse&id=@mouse.mouseId" class="btn btn-sm btn-warning">Edit</a>
                                        <a href="/Admin/DeleteDevice?empId=@Model.empId&deviceType=Mouse&id=@mouse.mouseId" class="btn btn-sm btn-danger">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }

            <p class="text-center">
                <a href="/Admin/ManageEmployees" class="btn btn-secondary">Back</a>
            </p>
        </div>
    </div>
</main>

<!-- Footer -->
<footer class="bg-dark text-white text-center py-3 fixed-bottom">
    <div class="container">
        <p class="mb-0">Asset Management Service</p>
    </div>
</footer>
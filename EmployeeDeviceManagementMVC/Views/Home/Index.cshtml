@{
    ViewData["Title"] = "Home";
}

<!-- Bootstrap CSS CDN -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

<!-- Header -->
<header class="bg-dark text-white py-3">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="h4 mb-0">Assest Management Service</h1>
            <nav>
                @if ((bool)ViewData["IsAuthenticated"] == true)
                {
                    <a href="/Account/Logout" class="text-white text-decoration-none">Logout</a>
                }
                else
                {
                    <a href="/Account/Login" class="text-white text-decoration-none">Login</a>
                }
            </nav>
        </div>
    </div>
</header>

<!-- Main Content -->
<main class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <h2 class="mb-4">Welcome</h2>
            @if ((bool)ViewData["IsAuthenticated"] == false)
            {
                <p><a href="/Account/Login" class="btn btn-primary">Login</a></p>
            }
            else
            {
                @if (ViewData["Role"]?.ToString() == "Admin")
                {
                    <p><a href="/Admin/Index" class="btn btn-success">Admin Dashboard</a></p>
                }
                else
                {
                    <p><a href="/Employee/Devices" class="btn btn-info">My Devices</a></p>
                }
                <p><a href="/Account/Logout" class="btn btn-danger">Logout</a></p>
            }
        </div>
    </div>
</main>

<!-- Footer -->
<footer class="bg-dark text-white text-center py-3 fixed-bottom">
    <div class="container">
        <p class="mb-0">Assest Management Service</p>
    </div>
</footer>